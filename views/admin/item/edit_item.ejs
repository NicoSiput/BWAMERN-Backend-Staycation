<div class="tab-pane fade show active" id="edit-item" role="tabpanel" aria-labelledby="add-item-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Title</label>
                    <input type="text" class="form-control" name="title" value="<%= item.title %>" required>
                </div>
                <div class="form-group">
                    <label for="name">Price</label>
                    <input type="number" class="form-control" name="price" value="<%= item.price %>" required>
                </div>
                <div class="form-group">
                    <label for="name">city</label>
                    <input type="text" class="form-control" name="city" value="<%= item.city %>" required>
                </div>
                <div class="form-group">
                    <label for="category">Category</label>
                    <select name="categoryId" class="form-control">
                        <option value="<%= item.categoryId.id %>"><%= item.categoryId.name %></option>
                        <% for(let i = 0; i < category.length; i++) { %>
                        <option value="<%= category[i].id %>"><%= category[i].name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">image</label>
                    <input type="file" class="form-control" name="image" multiple>
                </div>
                <div class="form-group">
                    <label for="name">description</label>
                    <textarea name="about" class="form-control"><%= item.description %></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>